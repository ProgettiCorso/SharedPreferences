<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fziviello.sharedpreferences.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/id_EditNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Fabio" />

        <EditText
            android:id="@+id/id_EditCognome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Ziviello" />

        <Button
            android:id="@+id/id_BtnSalva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salva" />

        <Button
            android:id="@+id/id_BtnStampa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stampa" />

        <Button
            android:id="@+id/id_BtnPulisci"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pulisci" />

    </LinearLayout>
</RelativeLayout>
